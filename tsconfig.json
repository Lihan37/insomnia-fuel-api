{
  "compilerOptions": {
    "target": "ES2020",                 // good modern JS, but not bleeding-edge
    "module": "commonjs",              // ðŸ‘ˆ switch to CommonJS
    "moduleResolution": "node",        // classic Node resolution
    "rootDir": "./src",
    "outDir": "./dist",

    "esModuleInterop": true,
    "resolveJsonModule": true,

    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "sourceMap": true,
    "allowJs": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
